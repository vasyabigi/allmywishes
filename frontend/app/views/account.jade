section.vbox
  header.header.bg-light.dker
    p Welcome to our app

  section.scrollable.wrapper
    div.clearfix.m-b
      a.pull-left.thumb.m-r
        img.img-circle(ng-src="{{ currentAccount.image }}")
      div.clear
        div.h3.m-t-xs.m-b-xs {{ currentAccount.name }}

    div.row
      div.col-lg-8
        section.panel
          table.table.table-striped.b-t.text-sm.m-b-none
            thead
              tr
                th Title
                th.th-sortable Created
            tbody
              tr.text-lg(ng-repeat='wish in currentAccount.wishes')
                td
                  a(ng-href="/{{ currentAccount.slug }}/wishes/{{ wish.id }}") {{ wish.title }}
                td {{ wish.created | moment }}
