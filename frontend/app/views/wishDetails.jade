section.vbox
  header.header.bg-light.dker
    p Wish Details

  section.scrollable.wrapper
    div.row
      div.col-lg-10
        div.blog-post
          div.post-item
            div.post-media
              a
                img.img-full(ng-src='{{ wish.imageUrl }}')
            div.caption.wrapper-lg
              h2.post-title {{ wish.title }}
              div.post-sum
                p {{ wish.description }}
              div.line.line-lg
              div.text-muted
                i.icon-time.icon-muted
                | {{ wish.created | date:'medium' }}
                i.icon-user.icon-muted.m-l
                | by {{ wish.parentResource.id }}
          div(ezfb-xfbml="true")
            div.fb-comments(data-href="{{ pageUrl }}", data-width="500px")
